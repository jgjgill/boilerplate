{
  "name": "@boilerplate-demo/app",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node ./esbuild.config.js && react-router build",
    "start": "NODE_ENV=production node --loader=extensionless ./dist/index.js",
    "test": "vitest run"
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": [
      "dist/**",
      "node_modules/**",
      "src/web/**"
    ],
    "ext": "ts",
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && node --loader=extensionless ./dist/index.js | yarn pino-pretty --singleLine"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@graphql-hive/envelop": "^0.34.1",
    "@mcansh/remix-fastify": "^4.0.6",
    "@react-router/node": "^7.2.0",
    "@sinclair/typebox": "^0.34.16",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.12.0",
    "isbot": "^5.1.23",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0"
  },
  "devDependencies": {
    "@envelop/types": "^5.1.1",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.1.4",
    "@graphql-codegen/typescript-resolvers": "^4.4.3",
    "@react-router/dev": "^7.2.0",
    "@types/node": "20",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "relay-compiler": "^18.2.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vitest": "^3.0.5"
  }
}
